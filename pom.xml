                <artifactId>viewserver-adapters-common</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>io.viewserver</groupId>
                <artifactId>viewserver-adapters-csv</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>io.viewserver</groupId>
                <artifactId>viewserver-adapters-h2</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>io.viewserver</groupId>
