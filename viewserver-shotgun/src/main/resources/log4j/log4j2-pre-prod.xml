<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
<appenders>
    <Console name="Console" target="SYSTEM_OUT">
        <PatternLayout pattern="%d{yy/MM/dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
    </Console>
    <RollingFile name="DailyDebugLog" fileName="logs/shotgun-debug.log" filePattern="logs/shotgun-debug-%d{yyyy-MM-dd}_%i.log">
        <PatternLayout pattern="%d{yy/MM/dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        <Policies>
            <OnStartupTriggeringPolicy />
            <SizeBasedTriggeringPolicy size="100 MB" />
            <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
        </Policies>
    </RollingFile>
    <RollingFile name="DailyErrorLog" fileName="logs/shotgun-error.log" filePattern="logs/shotgun-error-%d{yyyy-MM-dd}_%i.log">
        <PatternLayout pattern="%d{yy/MM/dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        <Policies>
            <OnStartupTriggeringPolicy />
            <SizeBasedTriggeringPolicy size="100 MB" />
            <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
        </Policies>
    </RollingFile>
</appenders>
<Loggers>
    <Root level="debug">
        <AppenderRef ref="Console" level="debug"/>
        <AppenderRef ref="DailyDebugLog" level="debug"/>
        <AppenderRef ref="DailyErrorLog" level="error"/>
    </Root>
    <Logger name="io.netty.handler.codec.http.websocketx" level="info"/>
    <Logger name="io.viewserver.messages.PoolableMessage" level="info"/>
    <Logger name="org.mongodb.driver.protocol.command" level="info"/>
    <Logger name="io.viewserver.messages.PoolableMessage" level="info"/>
    <Logger name="io.viewserver.operators.sortxx" level="trace"/>
</Loggers>
</configuration>
