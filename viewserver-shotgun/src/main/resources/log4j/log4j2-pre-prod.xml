<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
<appenders>
    <RollingFile name="DailyLog" fileName="logs/shotgun.log" filePattern="logs/shotgun-%d{yyyy-MM-dd}_%i.log">
        <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] [%X{userName}] %-5level %logger{36} - %msg%n" />
        <Policies>
            <SizeBasedTriggeringPolicy size="100 MB" />
            <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
        </Policies>
    </RollingFile>
    <RollingFile name="DailyErrorLog" fileName="logs/shotgun-error.log" filePattern="logs/shotgun-error-%d{yyyy-MM-dd}_%i.log">
        <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] [%X{userName}] %-5level %logger{36} - %msg%n" />
        <Policies>
            <SizeBasedTriggeringPolicy size="100 MB" />
            <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
        </Policies>
    </RollingFile>
</appenders>s
<Loggers>
    <Root level="info">
        <AppenderRef ref="DailyLog" level="info"/>
        <AppenderRef ref="DailyErrorLog" level="error"/>
    </Root>
    <Logger name="org.mongodb.driver" level="error"/>
    <Logger name="io.netty.handler.codec.http.websocketx" level="info"/>
    <Logger name="io.viewserver.messages.PoolableMessage" level="info"/>
    <Logger name="org.mongodb.driver.protocol.command" level="info"/>
    <Logger name="org.mongodb.driver.cluster" level="info"/>
    <Logger name="io.viewserver.messages.PoolableMessage" level="info"/>
    <Logger name="io.viewserver.operators.sortxx" level="trace"/>
</Loggers>
</configuration>
